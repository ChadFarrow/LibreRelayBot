{
  "name": "libre-relay-bot",
  "version": "1.0.0",
  "description": "LibreRelayBot - IRC to Nostr bridge for SirLibre channel",
  "main": "libre-relay-bot.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node libre-relay-bot.js",
    "dev": "node --watch libre-relay-bot.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop LibreRelayBot",
    "pm2:restart": "pm2 restart LibreRelayBot",
    "pm2:delete": "pm2 delete LibreRelayBot",
    "pm2:logs": "pm2 logs LibreRelayBot",
    "pm2:monit": "pm2 monit",
    "setup-service": "./setup-service.sh",
    "health": "curl -s --max-time 5 http://localhost:3336/health || echo 'Bot is not running'",
    "status": "curl -s http://localhost:3336/status",
    "validate": "node -e \"import('./libre-relay-bot.js')\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "irc": "^0.5.2",
    "nostr-tools": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "tsx": "^4.16.2"
  }
}
